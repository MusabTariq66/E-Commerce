

@model IEnumerable<Product>
@{
    ViewData["Title"] = "Fetech";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Fetech</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Image</th
       

    </tr>
    @foreach (var item in Model)
    {
        <tr class="table-success">
            <td>@item.ProductId</td>
            <td>@item.Name </td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.CategoryId</td>




            <td><a asp-action="Delete" asp-route-id="@item.ProductId">Done</a></td>



        </tr>
    }
</table>




